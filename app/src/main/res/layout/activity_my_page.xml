<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E2F0D9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/logo"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/oneco_logo"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/title_ONECO"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:text="마이페이지"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/btn_search"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Btn_scan_trash"
                style="@style/Widget.Material3.Button"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#C5E0B4"
                android:text="쓰레기 스캔"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/Btn_measure_water_use"
                style="@style/Widget.Material3.Button"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#BDD7EE"
                android:text="물 사용량 측정"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#E2F0D9">

        <TextView
            android:id="@+id/temp_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="레벨 1"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/point_announce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="포인트를 모으면 나무가 성장해요!"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/Img_temp_level"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="-10dp"
            app:srcCompat="@drawable/level2" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="300dp"
            android:background="#FFFFFF"
            android:text=" "
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/title_condition"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="350dp"
            android:gravity="center"
            android:text="달성 조건"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_level"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="350dp"
            android:gravity="center"
            android:text="레벨"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Txt_tempPoint"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="280dp"
            android:layout_marginRight="20dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="눈송이님의 햇살은 30 밝기 입니다."
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#F5F5F5">

                <TextView
                    android:id="@+id/level1_text"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="레벨 1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <ImageView
                    android:id="@+id/level1_img"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/level1" />

                <TextView
                    android:id="@+id/level1_condition"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="270dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="없음"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/level2_text"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="레벨 2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <ImageView
                    android:id="@+id/level2_img"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/level2" />

                <TextView
                    android:id="@+id/level2_condition"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="270dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="30 밝기"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#F5F5F5">

                <TextView
                    android:id="@+id/level3_text"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="레벨 3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <ImageView
                    android:id="@+id/level3_img"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/level3" />

                <TextView
                    android:id="@+id/level3_condition"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="270dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="500 밝기"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/level4_text"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="레벨 4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <ImageView
                    android:id="@+id/level4_img"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/level4" />

                <TextView
                    android:id="@+id/level4_condition"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="270dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="1500 밝기"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#F5F5F5">

                <TextView
                    android:id="@+id/level5_text"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="레벨 5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <ImageView
                    android:id="@+id/level5_img"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/level5" />

                <TextView
                    android:id="@+id/level5_condition"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="270dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="2000 밝기"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>